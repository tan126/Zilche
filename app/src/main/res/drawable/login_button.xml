<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#302F6F"
                android:endColor="#303F7F"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#403F9F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#403F9F"
                android:startColor="#403F9F"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#403F9F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#504FaF"
                android:startColor="#403F9F"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#403F9F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>