<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#458b00"
                android:endColor="#f42116"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#dfc0fd" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ff4500"
                android:startColor="#458b00"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#dfc0fd" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#458b00"
                android:startColor="#ff4500"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#ff4500" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>