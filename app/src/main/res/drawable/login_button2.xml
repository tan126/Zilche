<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#cc3333" />
            <stroke
                android:width="1dp"
                android:color="#cc0000" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="50dp"
                android:top="10dp"
                android:right="50dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ff6633"
                android:angle="270" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="50dp"
                android:top="10dp"
                android:right="50dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>