<?xml version="1.0" encoding="utf-8"?>

    <com.zilche.zilche.SlidingPaneLayout
        android:id="@+id/sliding_pane"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

        <View
            android:layout_width="fill_parent"
            android:id="@+id/background"
            android:layout_gravity="left"
            android:background="#aa000000"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header_poll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#3F51B5"
                android:elevation="2dp">

                <ImageButton
                    android:id="@+id/back_button_poll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_chevron_left_white_24dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Categories"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/category_poll_view"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fav_poll_view"
                    android:padding="10dp"
                    android:src="@drawable/ic_favorite_border_white_24dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:background="#FFF"
                android:gravity="center"
                android:id="@+id/retry_bg"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection failed"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retry"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:onClick="reload"
                    />

            </LinearLayout>

            <LinearLayout
                android:background="#FFF"
                android:gravity="center"
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyle"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments"
                    android:background="#fff" />

                <LinearLayout
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/cal"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment 0"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:id="@+id/comment_count2"
                            android:paddingLeft="5dp"
                            android:textSize="16sp"
                            android:padding="10dp"
                            android:fontFamily="sans-serif"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>

                        <ImageButton
                            android:onClick="addComment"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_create_grey_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </com.zilche.zilche.SlidingPaneLayout>

