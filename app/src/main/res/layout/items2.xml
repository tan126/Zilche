<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="1dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="2dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        card_view:cardUseCompatPadding="true"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_done_grey_18dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/done"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_photo_grey_18dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/have_photo"
                    android:visibility="gone"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity= "center_vertical"
                    android:paddingLeft="3dp"
                    android:id="@+id/category_icon"
                    android:src="@drawable/ic_assessment_grey_18dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/category"
                    android:text="0"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity= "center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="1dp"
                    android:src="@drawable/ic_beenhere_grey_18dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity= "center_vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:id="@+id/overflow"
                    android:src="@drawable/ic_more_vert_grey_18dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Question here!"
                android:textColor="#232323"
                android:textSize="18sp"
                android:ellipsize="end"
                android:layout_margin="3dp"
                android:minHeight="90dp"
                android:id="@+id/question"
                android:maxLines="2"/>



            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:background="#02000000"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/author"
                    android:layout_margin="4dp"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:fontFamily="sans-serif-medium"
                    android:text="Anonymous"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/date"
                    android:textColor="#333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="2 days ago"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/pb"
        style="@style/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/reload_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_failed"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/reload"
            android:textSize="14sp"
            android:text="@string/reload"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>