<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:text="Options:"
                android:textSize="40dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:id="@+id/optionsheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option1"
                    android:layout_below="@id/optionsheader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:layout_weight=".9"

                    />
                <ImageButton
                    android:id="@+id/option1remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option2"
                    android:layout_below="@id/option1"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal" />
                <ImageButton
                    android:id="@+id/option2remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option3"
                    android:layout_below="@id/option2"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:scrollbars="horizontal"
                    android:singleLine="true"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option3remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:visibility="gone"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option4"
                    android:layout_below="@id/option3"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:scrollbars="horizontal"
                    android:singleLine="true"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option4remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:visibility="gone"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option5"
                    android:layout_below="@id/option4"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option5remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option6"
                    android:layout_below="@id/option5"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option6remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option7"
                    android:layout_below="@id/option6"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option7remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option8"
                    android:layout_below="@id/option7"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/option8remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option9"
                    android:layout_below="@id/option8"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option9remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/option10"
                    android:layout_below="@id/option9"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:hint="Enter option here..."
                    android:gravity="top|left"
                    android:singleLine="true"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/option10remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/addoption"
                android:onClick="addOption"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_add_white_24dp"
                android:background="@drawable/round_button"
                android:layout_gravity="center"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
