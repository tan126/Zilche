
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:id="@+id/scroll_view_poll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zilche.zilche.GridItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/image_poll_view"
                android:background="#fff"
                android:visibility="gone"
                android:scaleType="fitXY"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ddd"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            />

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:id="@+id/linlay_view_poll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#444"
                android:fontFamily="sans-serif"
                android:layout_margin="8dp"
                android:scrollHorizontally="false"
                android:layout_marginBottom="20dp"
                android:id="@+id/title_poll_view"
                android:minHeight="60dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:background="#fff"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLength="23"
                    android:ellipsize="end"
                    android:id="@+id/author_poll_view"
                    android:onClick="retrieveAuthorProfile"
                    android:clickable="true"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:id="@+id/date_poll_view"
                    android:fontFamily="sans-serif-medium"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ddd"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:id="@+id/total"
                    android:textAlignment="gravity"
                    android:fontFamily="sans-serif-medium"
                    android:layout_weight="1"
                    android:paddingTop="9dp"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="1dp"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beenhere_grey_18dp"
                    android:layout_gravity="right|center_vertical"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:layout_marginRight="10dp"
                android:id="@+id/radio_group_poll_view">

            </RadioGroup>

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/result_poll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ddd"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit_poll_view"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Submit"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:background="@drawable/login_button2"
                android:textColor="#fff"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/comment_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment (11)"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <ImageButton
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_create_grey_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                />

        </LinearLayout>



    </LinearLayout>
</ScrollView>

