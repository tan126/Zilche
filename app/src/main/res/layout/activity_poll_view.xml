<com.zilche.zilche.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <View
        android:layout_width="fill_parent"
        android:layout_gravity="left"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="#fff3f3f3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_poll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#3F51B5"
            android:elevation="2dp"
            >

            <ImageButton
                android:id="@+id/back_button_poll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_chevron_left_white_24dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Categories"
                android:textColor="#fff"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/category_poll_view"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_poll_view"
                android:padding="10dp"
                android:src="@drawable/ic_share_white_24dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_view_poll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.zilche.zilche.GridItemView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:id="@+id/image_poll_view"
                    android:background="#a00"
                    android:visibility="visible"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#ddd"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linlay_view_poll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#444"
                        android:fontFamily="sans-serif"
                        android:layout_margin="8dp"
                        android:scrollHorizontally="false"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/title_poll_view"
                        android:minHeight="60dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:maxLength="23"
                            android:id="@+id/author_poll_view"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:id="@+id/date_poll_view"
                            android:fontFamily="sans-serif-medium"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#ddd"
                        />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/radio_group_poll_view">

                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#ddd"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_poll_view"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Submit"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:background="@drawable/login_button2"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Your identity will be kept anonymous to other users."/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>





</com.zilche.zilche.SlidingPaneLayout>