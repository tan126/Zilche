<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zilche.zilche.FullScreenImage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:src="@drawable/ic_highlight_off_black_48dp"
        android:background="@null"
        android:layout_gravity="bottom"
        android:onClick="cancelPhotoSelection"/>

    <ImageButton
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_check_circle_black_48dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:onClick="acceptPhotoSelection"
        />

        <ImageView
            android:id="@+id/fullImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/cancelButton"
            />


    </RelativeLayout>
</LinearLayout>
